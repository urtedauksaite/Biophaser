  "lessons": {
    "polarumas": {
      "title": "Poliarumas",
      "intro": "Šiame režime klasifikuoji pagal šoninės grandinės poliarumą. Pirmiausia atpažink, ar aminorūgštis turi krūvį (rūgštinės/bazinės). Jei krūvio nėra, skirk polines neutralias nuo nepolinių.",
      "groups": [
        {
          "key": "nepolines",
          "label": "Nepolinės",
          "tip": "Taisyklė: neturi krūvio ir dažniausiai yra hidrofobinės.\nĮsiminti: Ala, Val, Leu, Ile, Met, Phe, Trp, Pro, Gly."
        },
        {
          "key": "polines_neutralios",
          "label": "Polinės (neutralios)",
          "tip": "Taisyklė: nėra įkrautos, bet yra polinės (gali sudaryti sąveikas su vandeniu).\nĮsiminti: Ser, Thr, Cys, Tyr, Asn, Gln.\nSpąstas: Tyr turi žiedą, bet dėl –OH šiame žaidime priskiriama polinėms."
        },
        {
          "key": "rugsties",
          "label": "Rūgštinės",
          "tip": "Taisyklė: turi neigiamą krūvį.\nĮsiminti: Asp, Glu."
        },
        {
          "key": "bazines",
          "label": "Bazinės",
          "tip": "Taisyklė: turi teigiamą krūvį.\nĮsiminti: Lys, Arg, His.\nSpąstas: His dažnai laikoma „tarpine“, bet šiame žaidime priskiriama bazinėms."
        }
      ]
    },
    "hidrofobiskumas": {
      "title": "Hidrofobiškumas",
      "intro": "Šiame režime klasifikuoji pagal tai, kaip aminorūgšties šoninė grandinė sąveikauja su vandeniu: hidrofobinės vengia vandens, o hidrofilinės su juo sąveikauja (dažnai dėl poliarių grupių arba krūvio).",
      "groups": [
        {
          "key": "hidrofobines",
          "label": "Hidrofobinės",
          "tip": "Taisyklė: dažniausiai vengia vandens ir dažniau būna baltymo viduje.\nĮsiminti: Ala, Val, Leu, Ile, Met, Phe, Trp, Pro."
        },
        {
          "key": "hidrofilines",
          "label": "Hidrofilinės",
          "tip": "Taisyklė: mėgsta vandenį; į šią grupę patenka polinės ir įkrautos aminorūgštys.\nĮsiminti: Ser, Thr, Cys, Tyr, Asn, Gln, Asp, Glu, Lys, Arg, His.\nSpąstas: Tyr dėl –OH laikoma hidrofiline."
        }
      ]
    },
    "aromatiskumas": {
      "title": "Aromatiškumas",
      "intro": "Šiame režime klasifikuoji tik pagal vieną požymį: ar aminorūgšties šoninėje grandinėje yra aromatinis žiedas. Neklasifikuok pagal poliarumą ar hidrofobiškumą — svarbus tik žiedas.",
      "groups": [
        {
          "key": "aromatines",
          "label": "Aromatinės",
          "tip": "Taisyklė: turi aromatinį žiedą.\nĮsiminti: Phe, Trp, Tyr, His.\nSpąstas: His irgi priskiriama aromatinėms (turi žiedą)."
        },
        {
          "key": "alifatines",
          "label": "Alifatinės",
          "tip": "Taisyklė: neturi aromatinio žiedo.\nVadinasi: visos kitos 16 aminorūgščių."
        }
      ]
    }
  },
